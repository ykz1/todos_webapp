<section id="todos">
  <header>
    <h2>Editing '<%= @list[:name] %>'</h2>
    <ul>
      <li>
        <form action="/lists/<%= @list_index %>/delete" method="post">
          <button type="submit" class="delete">Delete</button>
        </form>
      </li>
    </ul>
  </header>
</section>

<form action="/lists/<%= params[:list_index] %>/edit" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter a new name for this list:</label>
    </dt>
    <dd>
      <input name="list_name" placeholder="List Name" type="text" value="<%= params[:list_name] || @list[:name] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists">Cancel</a>
  </fieldset>
</form>

<% content_for :header_links do %>
  <a class="list" href="/lists">All lists</a>
<% end %>